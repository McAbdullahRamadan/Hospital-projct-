@using Hospital.Utilities
@using cloudscribe.Web.Pagination
@model PagedResult<Hospital.ViewModels.HospitalInfoViewModel>
@{
    ViewData["Title"] = "Index";

}
<h1>Index</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
    


</p>
<table class=" table table-bordered" >
    <thead>
        <tr>
            <th>
                id
            </th>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>
                City
            </th>
            <th>
                PinCode
            </th>
            <th>
                Country
            </th>
            <th>
                Settings
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Data)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PinCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit",new {id=item.id})  |
                    @Html.ActionLink("Detalis", "Detalis", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
            
        }
    </tbody>
    
</table>
<cs-pager cs-paging-pageSize=(int)Model.PageSize
           cs-paging-pageNumber=(int)Model.PageNumber
           cs-paging-TotalItems=(int)Model.TotalItem 
           cs-pagenumber-param="pageNumber"
           asp-controller="Hospitals"

          asp-action="index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
</cs-pager>